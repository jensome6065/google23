extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text' placeholder='Name' name='name' required='true' value=(undefined===user ? '' : user.name))
      label(for='username') Username:
      input#username.form-control(type='text' placeholder='Username' name='username' required='true' value=(undefined===user ? '' : user.username) )
      label(for = 'password') Password: 
      input#password.form-control(type='password' placeholder='Password' name='password' required='true' value=(undefined===user ? '' : user.name))
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg